{
  "name": "words-api",
  "version": "1.0.0",
  "description": "Api for retrieving quiz value lists",
  "main": "src/index.js",
  "scripts": {
    "start": "env-cmd --file process.env nodemon",
    "dev": "env-cmd nodemon"
  },
  "author": "Thomas Lissens",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.1",
    "config": "^3.3.9",
    "env-cmd": "^10.1.0",
    "express": "^4.18.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "node-emoji": "^2.1.0",
    "nodemon": "^3.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "nodemon": "^3.0.1"
  },
  "nodemonConfig": {
    "signal": "SIGTERM",
    "ignore": [
      "node_modules/*",
      ".vscode/*"
    ],
    "delay": "80",
    "watch": [
      "config",
      "src"
    ],
    "ext": "js,json",
    "legacyWatch": true,
    "exec": "node --inspect=0.0.0.0:9001 --trace-warnings src/index.js"
  },
  "engines": {
    "npm": ">=9.8.0",
    "node": ">=20.6.0",
    "yarn": ">=1.22.0"
  }
}
